@page
@model IndexModel
@{
    ViewData["Title"] = "Моят Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>

        <div class="col-md-9">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom p-4">
                    <h4 class="fw-bold mb-0">Лична информация</h4>
                </div>
                <div class="card-body p-4">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control rounded-3" placeholder="Потребителско име" disabled />
                            <label asp-for="Username" class="form-label">Потребителско име</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control rounded-3" placeholder="Телефон" />
                            <label asp-for="Input.PhoneNumber" class="form-label">Телефонен номер</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm mt-3">
                            Запази промените
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 