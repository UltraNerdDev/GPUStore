@page
@model EmailModel
@{
    ViewData["Title"] = "Настройки на имейл";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-header bg-white border-bottom p-4">
        <h4 class="fw-bold mb-0"><i class="bi bi-envelope-at me-2 text-primary"></i> Управление на имейл</h4>
    </div>
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="mb-4">
                <label class="form-label small fw-bold text-muted">Текущ имейл адрес</label>
                <div class="input-group">
                    <input asp-for="Email" class="form-control bg-light rounded-3" placeholder="Имейл" disabled />
                    @if (Model.IsEmailConfirmed)
                    {
                        <span class="input-group-text bg-success text-white rounded-3 border-0 ms-2 shadow-sm">
                            <i class="bi bi-check-circle-fill me-1"></i> Потвърден
                        </span>
                    }
                </div>
            </div>

            <hr class="my-4 text-muted opacity-25">

            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail" class="form-control rounded-3" autocomplete="email" aria-required="true" placeholder="Нов имейл" />
                <label asp-for="Input.NewEmail" class="form-label">Нов имейл адрес</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm mt-2">
                Промени имейла
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
