<div class="card border-0 shadow-sm rounded-4">
    <div class="card-header bg-white border-bottom p-4">
        <h4 class="fw-bold mb-0"><i class="bi bi-key me-2 text-primary"></i> Смяна на парола</h4>
    </div>
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="Стара парола" />
                <label asp-for="Input.OldPassword" class="form-label">Стара парола</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="Нова парола" />
                <label asp-for="Input.NewPassword" class="form-label">Нова парола</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="Потвърди парола" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Потвърди новата парола</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm mt-2">
                Обнови паролата
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
