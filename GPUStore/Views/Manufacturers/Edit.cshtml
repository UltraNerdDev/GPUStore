@model GPUStore.Models.Manufacturer

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Редактирай Производител</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        @* ВАЖНО: Скрит Id, за да знае базата какво редактираме *@
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label font-weight-bold">Име на марката</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Запази промените</button>
                            <a asp-action="Index" class="btn btn-secondary">Назад</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>