@* ============================================================
   Views/Manufacturers/Create.cshtml — Нов производител (Admin)
   ============================================================
   Модел: Manufacturer — само Name полето е нужно (Id се генерира от DB).
   asp-validation-summary и asp-validation-for показват ModelState грешки.
   ============================================================ *@
@model GPUStore.Models.Manufacturer

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Добави нов Производител</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label font-weight-bold">Име на марката</label>
                            <input asp-for="Name" class="form-control" placeholder="напр. NVIDIA, ASUS, MSI..." />
                            @* asp-validation-for показва конкретната ModelState грешка за Name *@
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Запази</button>
                            <a asp-action="Index" class="btn btn-secondary">Назад към списъка</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}