@* ============================================================
   Views/Manufacturers/Index.cshtml — Списък производители (Admin)
   ============================================================ *@
@model IEnumerable<GPUStore.Models.Manufacturer>

<div class="d-flex justify-content-between align-items-center mt-4 mb-4">
    <h1>Списък с производители</h1>
    <a asp-action="Create" class="btn btn-primary">Добави нов производител</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Име на марката</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>