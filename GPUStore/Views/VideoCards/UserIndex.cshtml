@model IEnumerable<GPUStore.Models.VideoCard>

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-dark">Каталог видеокарти</h2>

    <div class="card border-0 shadow-sm rounded-4 mb-5 bg-light">
        <div class="card-body p-4">
            <form method="get" asp-action="UserIndex" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label small fw-bold">Търсене</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchTerm" value="@ViewBag.CurrentSearch" class="form-control border-start-0 shadow-none" placeholder="Модел (напр. RTX 4080)...">
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label small fw-bold">Производител</label>
                    <select name="manufacturerId" class="form-select shadow-none">
                        <option value="">Всички марки</option>
                        @foreach (var m in (List<GPUStore.Models.Manufacturer>)ViewBag.Manufacturers)
                        {
                            <option value="@m.Id" selected="@(ViewBag.CurrentManufacturer != null && (int)ViewBag.CurrentManufacturer == m.Id)">
                                @m.Name
                            </option>
                        }
                    </select>
                </div>

                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">Филтрирай</button>
                    <a asp-action="UserIndex" class="btn btn-outline-secondary rounded-pill fw-bold"><i class="bi bi-x-lg"></i></a>
                </div>
            </form>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-emoji-frown display-1 text-muted"></i>
                <p class="h4 text-muted mt-3">Няма намерени карти по тези критерии.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 transition-up">
                        <img src="~/images/@item.ImageUrl" class="card-img-top p-3" alt="..." style="height: 200px; object-fit: contain;">
                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="card-title fw-bold">@item.ModelName</h5>
                            <p class="text-primary fw-bold h4">@item.Price.ToString("C2")</p>
                            <div class="mt-auto pt-3">
                                <a asp-action="UserDetails" asp-route-id="@item.Id" class="btn btn-outline-primary w-100 rounded-pill mb-2">Детайли</a>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="cardId" value="@item.Id" />
                                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                                    {
                                        <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold shadow-sm">Купи</button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .transition-up {
        transition: transform 0.2s ease;
    }

        .transition-up:hover {
            transform: translateY(-10px);
        }
</style>
