@model GPUStore.ViewModels.VideoCardCreateViewModel

<div class="container mt-4">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2>Редактирай Видеокарта</h2>
    <hr />
    @* ВАЖНО: Добавен enctype *@
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="VideoCard.Id" />
        @* Запазваме текущия ImageUrl в скрит field, за да не се затрие при валидация *@
        <input type="hidden" asp-for="VideoCard.ImageUrl" />
        <input type="hidden" asp-for="VideoCard.AddedById" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="fw-bold">Модел</label>
                    <input asp-for="VideoCard.ModelName" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label class="fw-bold">Производител</label>
                    <select asp-for="VideoCard.ManufacturerId" asp-items="Model.Manufacturers" class="form-control"></select>
                </div>

                <div class="form-group mb-3">
                    <label class="fw-bold">Цена</label>
                    <input asp-for="VideoCard.Price" class="form-control" type="number" step="0.01" />
                </div>

                <div class="form-group mb-3">
                    <label class="fw-bold">Промени снимката</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VideoCard.Description" class="control-label">Описание</label>
                    <textarea asp-for="VideoCard.Description" class="form-control" rows="5"></textarea>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <label class="fw-bold d-block mb-2">Текуща снимка</label>
                @if (!string.IsNullOrEmpty(Model.VideoCard.ImageUrl))
                {
                    <img src="~/images/@Model.VideoCard.ImageUrl" class="img-thumbnail shadow-sm" style="max-height: 250px;" />
                }
                else
                {
                    <div class="p-5 border bg-light text-muted">Няма качена снимка</div>
                }
            </div>
        </div>

        <hr />
        <h4>Технологии</h4>
        <div class="row">
            @for (int i = 0; i < Model.AvailableTechnologies.Count; i++)
            {
                <div class="col-md-4 mb-2">
                    <div class="form-check p-2 border rounded shadow-sm">
                        <input type="hidden" asp-for="@Model.AvailableTechnologies[i].TechnologyId" />
                        <input type="hidden" asp-for="@Model.AvailableTechnologies[i].Name" />
                        <input asp-for="@Model.AvailableTechnologies[i].IsSelected" class="form-check-input ms-1" type="checkbox" />
                        <label class="form-check-label ms-4">@Model.AvailableTechnologies[i].Name</label>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Запази промените</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Отказ</a>
        </div>
    </form>
</div>

<style>
    textarea{
		resize: none;
    }
</style>