@model GPUStore.ViewModels.VideoCardCreateViewModel

<h1>Редактирай Видеокарта</h1>

@* КОРИГИРАНО: asp-action трябва да бъде Edit *@
<form asp-action="Edit" method="post">

    @* КОРИГИРАНО: Добавяме скрит вход за ID-то на картата *@
    <input type="hidden" asp-for="VideoCard.Id" />

    <div class="form-group mb-3">
        <label>Модел име</label>
        <input asp-for="VideoCard.ModelName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Производител</label>
        <select asp-for="VideoCard.ManufacturerId" asp-items="Model.Manufacturers" class="form-control">
            <option value="">-- Избери производител --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Цена</label>
        <input asp-for="VideoCard.Price" class="form-control" type="number" step="0.01" />
    </div>

    <hr />
    <h4>Технологии</h4>
    @for (int i = 0; i < Model.AvailableTechnologies.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model.AvailableTechnologies[i].TechnologyId" />
            <input type="hidden" asp-for="@Model.AvailableTechnologies[i].Name" />
            <input asp-for="@Model.AvailableTechnologies[i].IsSelected" class="form-check-input" type="checkbox" />
            <label class="form-check-label">@Model.AvailableTechnologies[i].Name</label>
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Запази промените</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
</form>