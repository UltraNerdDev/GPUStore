@* ============================================================
   Views/Cart/Index.cshtml — Страница на пазарската количката
   ============================================================
   Модел: IEnumerable<CartItem> — списъкът с продукти в количката.

   Функционалности:
   - Показва продуктите с +/- бутони (AJAX без reload)
   - Изчислява обща сума в реално време
   - Позволява изтриване на продукт
   - Бутон "Завърши поръчката" → Checkout
   ============================================================ *@
@model IEnumerable<GPUStore.Models.CartItem>

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-cart3"></i> Вашата количка</h2>

    @* Ако количката е ПРАЗНА — показваме информационно съобщение *@
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Количката ви е празна. <a href="/VideoCards/UserIndex">Към каталога!</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Продукт</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Общо</th>
                        <th></th>  @* Колона за бутон "Изтрий" *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* Снимка + линк към детайлите *@
                            <td>
                                <a asp-controller="VideoCards" asp-action="UserDetails" asp-route-id="@item.VideoCard.Id"
                                   class="text-decoration-none text-dark">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/@item.VideoCard.ImageUrl" style="width: 60px;" class="me-3" />
                                        <span class="fw-bold">@item.VideoCard.ModelName</span>
                                    </div>
                                </a>
                            </td>

                            @* Цена за единица бройка *@
                            <td>@item.VideoCard.Price.ToString("C2")</td>

                            @* +/- бутони за AJAX промяна на количество.
                               onclick извиква JavaScript функцията updateQty() по-долу.
                               Параметрите са: VideoCardId (не CartItem.Id!) и промяната (+1 или -1) *@
                            <td class="align-middle">
                                <div class="d-flex align-items-center justify-content-center">
                                    <button class="btn btn-sm btn-outline-secondary rounded-circle px-2"
                                            onclick="updateQty(@item.VideoCardId, -1)">
                                        <i class="bi bi-dash-lg"></i>
                                    </button>

                                    @* span с id="qty-{VideoCardId}" — JavaScript обновява текста тук *@
                                    <span id="qty-@item.VideoCardId" class="mx-3 fw-bold fs-5">@item.Quantity</span>

                                    <button class="btn btn-sm btn-outline-secondary rounded-circle px-2"
                                            onclick="updateQty(@item.VideoCardId, 1)">
                                        <i class="bi bi-plus-lg"></i>
                                    </button>
                                </div>
                            </td>

                            @* Сума за реда (Quantity × Price).
                               id="item-total-{VideoCardId}" — JavaScript обновява стойността *@
                            <td class="align-middle">
                                <span id="item-total-@item.VideoCardId">
                                    @((item.Quantity * item.VideoCard.Price).ToString("C2"))
                                </span>
                            </td>

                            @* Бутон за изтриване — Remove действие с CartItem.Id (не VideoCard.Id!) *@
                            <td class="text-end">
                                <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

                @* Footer с ОБЩАТА СУМА на цялата количка.
                   id="cart-total-sum" — JavaScript обновява тук при AJAX заявки *@
                <tfoot class="table-light">
                    <tr>
                        <td colspan="3" class="text-end fw-bold fs-5">Обща сума:</td>
                        <td id="cart-total-sum" colspan="2" class="fw-bold fs-5 text-primary">
                            @* Изчисляваме обща сума на сървъра при първоначално зареждане *@
                            @Model.Sum(x => x.Quantity * x.VideoCard.Price).ToString("C2")
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="/VideoCards/UserIndex" class="btn btn-outline-secondary">Продължи пазаруването</a>
            @* asp-controller/asp-action генерира /Orders/Checkout *@
            <a asp-controller="Orders" asp-action="Checkout" class="btn btn-success btn-lg px-5">Завърши поръчката</a>
        </div>
    }
</div>

@* ── AJAX секция за динамична промяна на количества ── *@
@section Scripts {
    @* jQuery се зарежда от CDN — стандартна библиотека за AJAX *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        /**
         * updateQty(cardId, change) — извиква AJAX POST към Cart/UpdateQuantityAjax
         * param {number} cardId  - VideoCard.Id (не CartItem.Id!)
         * param {number} change  - +1 (увеличаване) или -1 (намаляване)
         */
        function updateQty(cardId, change) {
            $.ajax({
                url: '@Url.Action("UpdateQuantityAjax", "Cart")',  // Генерира правилния URL
                type: 'POST',
                data: {
                    cardId: cardId,
                    change: change
                },
                success: function (response) {
                    if (response.success) {
                        if (response.removed) {
                            // Ако количеството стана 0 — презареждаме страницата (редът изчезва)
                            location.reload();
                        } else {
                            // Обновяваме 3 DOM елемента без презареждане:
                            // 1. Количеството в span#qty-{cardId}
                            $('#qty-' + cardId).text(response.newQuantity);
                            // 2. Сумата за реда в span#item-total-{cardId}
                            $('#item-total-' + cardId).text(response.itemTotal);
                            // 3. Общата сума на количката в td#cart-total-sum
                            $('#cart-total-sum').text('Общо: ' + response.cartTotal);
                        }
                    }
                }
            });
        }
    </script>
}