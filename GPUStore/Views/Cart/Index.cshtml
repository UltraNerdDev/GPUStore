@model IEnumerable<GPUStore.Models.CartItem>

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-cart3"></i> Вашата количка</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Количката ви е празна. <a href="/VideoCards/UserIndex">Към каталога!</a></div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Продукт</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Общо</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="~/images/@item.VideoCard.ImageUrl" style="width: 60px;" class="me-3" />
                                    <span class="fw-bold">@item.VideoCard.ModelName</span>
                                </div>
                            </td>
                            <td>@item.VideoCard.Price.ToString("C2")</td>
                            <td class="align-middle">
                                <div class="d-flex align-items-center justify-content-center">
                                    <button class="btn btn-sm btn-outline-secondary rounded-circle px-2"
                                            onclick="updateQty(@item.VideoCardId, -1)">
                                        <i class="bi bi-dash-lg"></i>
                                    </button>

                                    <span id="qty-@item.VideoCardId" class="mx-3 fw-bold fs-5">@item.Quantity</span>

                                    <button class="btn btn-sm btn-outline-secondary rounded-circle px-2"
                                            onclick="updateQty(@item.VideoCardId, 1)">
                                        <i class="bi bi-plus-lg"></i>
                                    </button>
                                </div>
                            </td>

                            <td class="align-middle">
                                <span id="item-total-@item.VideoCardId">@((item.Quantity * item.VideoCard.Price).ToString("C2"))</span>
                            </td>

                            @*<h4 id="cart-total-sum">Общо: @Model.Sum(x => x.Quantity * x.VideoCard.Price).ToString("C2")</h4>*@
                            <td class="text-end">
                                <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="3" class="text-end fw-bold fs-5">Обща сума:</td>
                        <td id="cart-total-sum" colspan=" 2" class="fw-bold fs-5 text-primary">
                            @Model.Sum(x => x.Quantity * x.VideoCard.Price).ToString("C2")
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="/VideoCards/UserIndex" class="btn btn-outline-secondary">Продължи пазаруването</a>
            <a asp-controller="Orders" asp-action="Checkout" class="btn btn-success btn-lg px-5">Завърши поръчката</a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function updateQty(cardId, change) {
            $.ajax({
                url: '@Url.Action("UpdateQuantityAjax", "Cart")',
                type: 'POST',
                data: {
                    cardId: cardId,
                    change: change
                },
                success: function (response) {
                    if (response.success) {
                        if (response.removed) {
                            // Ако количеството е 0, презареждаме или скриваме реда
                            location.reload();
                        } else {
                            // Обновяваме количеството и цените без презареждане
                            $('#qty-' + cardId).text(response.newQuantity);
                            $('#item-total-' + cardId).text(response.itemTotal);
                            $('#cart-total-sum').text('Общо: ' + response.cartTotal);
                        }
                    }
                }
            });
        }
    </script>
}