@model GPUStore.Models.Technology

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Добави нова технология</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label font-weight-bold">Технология</label>
                            <input asp-for="Name" class="form-control" placeholder="напр. Ray Tracing, DLSS..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Запази
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Назад към списъка</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}