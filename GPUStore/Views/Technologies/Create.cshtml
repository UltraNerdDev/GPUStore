<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom p-4">
                    <h4 class="fw-bold mb-0">Добавяне на технология</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Име на технологията</label>
                            <input asp-for="Name" class="form-control rounded-3" placeholder="напр. Ray Tracing, DLSS..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold">Запази</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Отказ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

