@model IEnumerable<GPUStore.Models.Technology>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h1>Списък с технологии</h1>
        <a asp-action="Create" class="btn btn-primary">Добави нова технология</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Име на технологията</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Редактирай</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>