<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GPUStore</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GPUStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>        
        html,
        body {height: 100%;}/* Make layout a full-height column so footer sits at the bottom */       
        body {
            display: flex;
            flex-direction: column; /* ensure no default body margins create gaps */
            min-height: 100vh;
            margin: 0;            
        }        
        .container {flex: 1 0 auto;}/* The container that holds the main content should grow to fill available space */
        footer {flex-shrink: 0;}/* Ensure footer does not shrink and stays at the bottom */        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GPUStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        *@
                        @* Този линк се вижда от ВСЕКИ логнат потребител *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="VideoCards" asp-action="UserIndex">
                                    <i class="bi bi-grid-3x3-gap"></i> Каталог
                                </a>
                            </li>
                        }
                        @if (!User.IsInRole("Admin") && User.Identity.IsAuthenticated)
                        {
                            @* ТОВА СЕ ВИЖДА САМО ОТ КЛИЕНТИ *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="MyOrders">Моите поръчки</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                                    <i class="bi bi-cart3"></i> Количка
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-primary fw-bold" href="#" id="adminDropdown"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock"></i> Админ Панел
                                </a>
                                <ul class="dropdown-menu shadow" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="VideoCards" asp-action="Index">
                                            <i class="bi bi-cpu"></i> Видеокарти
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Manufacturers" asp-action="Index">
                                            <i class="bi bi-building"></i> Производители
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Technologies" asp-action="Index">
                                            <i class="bi bi-gear"></i> Технологии
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                            <i class="bi bi-cart-check"></i> Поръчки
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <footer class="border-top footer text-muted bg-light">
            <div class="d-flex align-items-center justify-content-between small">
                <div>&copy; @DateTime.Now.Year - <strong>Admin Panel</strong></div>
                <div><i class="bi bi-shield-lock"></i> Admin Mode</div>
            </div>
        </footer>
    }
    else if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
    {
        <footer class="bg-dark text-white pt-5 pb-4">
            <div class="container text-center text-md-start">
                <div class="row text-center text-md-start">

                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 font-weight-bold text-primary">GPU Store</h5>
                        <p class="small">
                            Твоят доверен партньор в света на графичните технологии. Най-новите карти от NVIDIA и AMD на
                            конкурентни цени.
                        </p>
                    </div>

                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 font-weight-bold text-primary">Линкове</h5>
                        <p><a asp-controller="VideoCards" asp-action="UserIndex" class="text-white text-decoration-none small">Каталог</a>
                        </p>
                        <p><a asp-controller="Orders" asp-action="MyOrders" class="text-white text-decoration-none small">Моите
                            поръчки</a></p>
                        <p><a asp-controller="Cart" asp-action="Index" class="text-white text-decoration-none small">Количка</a>
                        </p>
                    </div>

                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h5 class="text-uppercase mb-4 font-weight-bold text-primary">Контакти</h5>
                        <p class="small"><i class="bi bi-house-door-fill me-2"></i> София, България</p>
                        <p class="small"><i class="bi bi-envelope-fill me-2"></i> support@gpustore.bg</p>
                        <p class="small"><i class="bi bi-telephone-fill me-2"></i> +359 888 123 456</p>
                    </div>

                </div>

                <hr class="mb-4">

                <div class="row align-items-center">
                    <div class="col-md-7 col-lg-8">
                        <p class="small">
                            © @DateTime.Now.Year Всички права запазени:
                            <strong class="text-primary">GPU Store Ltd.</strong>
                        </p>
                    </div>
                    <div class="col-md-5 col-lg-4">
                        <div class="text-center text-md-end">
                            <ul class="list-unstyled list-inline">
                                <li class="list-inline-item">
                                    <a href="#" class="btn-floating btn-sm text-white" style="font-size: 23px;"><i
                                        class="bi bi-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="btn-floating btn-sm text-white" style="font-size: 23px;"><i
                                        class="bi bi-instagram"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="btn-floating btn-sm text-white" style="font-size: 23px;"><i
                                        class="bi bi-discord"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }
    else
    {
        <footer class="border-top footer text-muted bg-light">
            <div class="text-center">
                &copy; @DateTime.Now.Year - GPU Store - Всички права запазени.
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
