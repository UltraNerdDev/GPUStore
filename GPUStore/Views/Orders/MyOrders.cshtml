@model IEnumerable<GPUStore.Models.Order>

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-box-seam text-primary"></i> Моите поръчки</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-light border shadow-sm text-center py-5">
            <h4>Все още нямате направени поръчки.</h4>
            <a href="/VideoCards/UserIndex" class="btn btn-primary mt-3">Разгледай каталога</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle bg-white">
                <thead class="table-dark">
                    <tr>
                        <th>Номер</th>
                        <th>Дата</th>
                        <th>Обща сума</th>
                        <th>Статус</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@order.Id</td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="fw-bold text-primary">@order.TotalPrice.ToString("C2")</td>
                            <td>
                                @if (order.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Обработва се</span>
                                }
                                else if (order.Status == "Shipped")
                                {
                                    <span class="badge bg-info">Изпратена</span>
                                }
                                else if (order.Status == "Delivered")
                                {
                                    <span class="badge bg-success">Доставена</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.Status</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>