@* ============================================================
   Views/Orders/Index.cshtml — Всички поръчки (Admin)
   ============================================================
   Модел: IEnumerable<Order>
   Admin вижда ВСИЧКИ поръчки с цветно-кодирани статуси.
   Switch expression генерира CSS клас за badge-а.
   ============================================================ *@
@model IEnumerable<GPUStore.Models.Order>

<div class="container mt-4">
    <h2>Управление на Поръчки</h2>
    <table class="table table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Дата</th>
                <th>Потребител</th>
                <th>Обща Сума</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    @* ?.Email — null-conditional: ако User е null, показва нищо *@
                    <td>@item.User?.Email</td>
                    @* Сумата се изчислява от OrderItems (не от TotalPrice) за по-голяма точност *@
                    <td>@item.OrderItems.Sum(oi => oi.Quantity * oi.PriceAtPurchase).ToString("C2")</td>
                    <td>
                        @{
                            @* C# 8+ switch expression — компактна алтернатива на switch statement *@
                            var badgeClass = item.Status switch
                            {
                                "Изчакваща" => "bg-warning text-dark",  // Жълто
                                "Обработена" => "bg-info text-dark",     // Синьо
                                "Изпратена" => "bg-success",            // Зелено
                                "Отказана" => "bg-danger",             // Червено
                                _ => "bg-secondary"           // Сиво (fallback)
                            };
                        }
                        <span class="badge @badgeClass">@item.Status</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>