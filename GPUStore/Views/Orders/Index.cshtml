@model IEnumerable<GPUStore.Models.Order>

<div class="container mt-4">
    <h2>Управление на Поръчки</h2>
    <table class="table table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Дата</th>
                <th>Потребител (ID)</th>
                <th>Обща Сума</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    <td>@item.User?.Email</td> @* Показваме имейла, ако връзката работи *@
                    <td>@item.OrderItems.Sum(oi => oi.Quantity * oi.PriceAtPurchase).ToString("C2")</td>
                    <td>
                        @{
                            var badgeClass = item.Status switch
                            {
                                "Pending" => "bg-warning text-dark",
                                "Processed" => "bg-info text-dark",
                                "Shipped" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@item.Status</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детайли</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>